# =============================================================================
# EXEMPLES DE CONFIGURATIONS - terraform.tfvars
# =============================================================================
# Copiez l'exemple de votre choix dans terraform.tfvars
# =============================================================================

# =============================================================================
# EXEMPLE 1 : Workshop avec 10 participants (Configuration par défaut)
# =============================================================================
# Usage: Formation de 2h avec participants nécessitant des VMs identiques
# Coût: ~$400/mois (24/7) ou ~$1/jour si utilisé 2h

vm_count                = 10
vm_name_prefix          = "workshop-vm"
default_vm_size         = "Standard_B2s"        # 2 vCPU, 4 GB RAM
default_os_disk_size_gb = 50
default_os_disk_type    = "Standard_LRS"
location                = "westeurope"
project_name            = "workshop"
environment             = "dev"
allowed_ssh_cidrs       = ["0.0.0.0/0"]         # ⚠️ Restreignez pour production

tags = {
  Workshop     = "ClusterAPI-k0smotron"
  Duration     = "2-hours"
  Participants = "10"
}

